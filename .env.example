# JARVIS AI Configuration Environment Variables
# Copy this file to .env and fill in your actual values

# Application Settings
NODE_ENV=development
DEBUG=true
API_HOST=0.0.0.0
API_PORT=5000

# LLM/AI Configuration
LLM_PROVIDER=openrouter
LLM_API_KEY=your_api_key_here
LLM_API_BASE=https://openrouter.ai/api/v1
LLM_MODEL=openai/gpt-oss-20b:free
LLM_VISION_MODEL=gpt-4o
LLM_ENABLE_REASONING=true

# Database (for future use)
DB_URL=sqlite:///jarvis.db
REDIS_URL=redis://localhost:6379

# Security
SECURITY_JWT_SECRET=your_jwt_secret_key_change_this_in_production
SECURITY_JWT_ALGORITHM=HS256
SECURITY_JWT_EXPIRY_HOURS=24

# Voice Configuration
VOICE_ENABLED=true
VOICE_RATE=230
VOICE_VOLUME=1.0
VOICE_PITCH=1.5
VOICE_ENERGY_THRESHOLD=4000
VOICE_DYNAMIC_ENERGY_THRESHOLD=true

# System Configuration
SYSTEM_OS_TYPE=auto
SYSTEM_PYAUTOGUI_FAILSAFE=true
SYSTEM_PYAUTOGUI_PAUSE=0.5

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=logs/jarvis.log

# CORS Configuration
API_CORS_ORIGINS=*

# External Services
YOUTUBE_API_KEY=your_youtube_api_key_if_needed